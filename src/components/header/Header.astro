<header class='header'>
    <nav class='header__nav'>
        <h1>Icon</h1>
        <ul class='header__nav__list'>
            <a href='#' class='header__nav__list--item'>About</a>
            <a href='#' class='header__nav__list--item'>Stack</a>
            <a href='#' class='header__nav__list--item'>Proyects</a>
            <a href='#' class='header__nav__list--item'>
                <button class='item__btn'>Contact</button>
            </a>
        </ul>
    </nav>
</header>

<style>
    .header {
        padding: 0.5rem;
        position: fixed;
        width: 100%;
        z-index: 1;

        background: rgba(255, 255, 255, 0.9);
        border-radius: 16px;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }
    .header__nav {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }
    .header__nav__list {
        display: inline-flex;
        gap: 1rem;
    }
    .header__nav__list--item {
        display: grid;
        place-content: center;
        color: var(--fontSecond);
        text-decoration: none;
        transition: 0.3s ease-in;
    }
    .header__nav__list--item:hover {
        color: var(--fontMainBlack);
    }
    .item__btn {
        background-color: var(--fontMainBlack);
        color: var(--fontMainWhite);
        cursor: pointer;
        padding: 0.3rem;
        font-size: 1rem;
        border: none;
        border-radius: 10px;
        transition: 0.3s ease-in;
    }
    .item__btn:hover {
        background-image: radial-gradient(
            circle,
            rgba(63, 94, 251, 1) 0%,
            rgba(252, 70, 107, 1) 100%
        );
    }
</style>
